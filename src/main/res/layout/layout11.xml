<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DC 4-3/4\''"
        android:textSize="30sp"
        android:layout_margin="15dp"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Length"
            android:textSize="20sp"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="80dp"
            android:id="@+id/length"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_toEndOf="@+id/length"
            android:layout_toRightOf="@+id/length"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="75dp"
            android:textSize="30sp"
            android:id="@+id/equal"/>
        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/equal"
            android:layout_toRightOf="@+id/equal"
            android:layout_marginTop="75dp"
            android:id="@+id/value"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="meter"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/value"
            android:layout_toRightOf="@+id/value"
            android:layout_marginTop="80dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:textSize="19sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/button11"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="calculate"/>


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metal Volume"
        android:textSize="30sp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_marginStart="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="220dp"
        android:textSize="45sp"
        android:id="@+id/equal2"/>
    <TextView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/equal2"
        android:layout_toRightOf="@+id/equal2"
        android:layout_marginTop="239dp"
        android:maxLines="1"
        android:maxLength="10"
        android:id="@+id/value2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Litre"
        android:textSize="30sp"
        android:layout_toEndOf="@+id/value2"
        android:layout_toRightOf="@+id/value2"
        android:layout_marginTop="230dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_marginStart="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="320dp"
        android:textSize="45sp"
        android:id="@+id/equal3"/>
    <TextView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/equal2"
        android:layout_toRightOf="@+id/equal2"
        android:layout_marginTop="339dp"
        android:maxLines="1"
        android:maxLength="10"
        android:id="@+id/value3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m3"
        android:textSize="30sp"
        android:layout_toEndOf="@+id/value3"
        android:layout_toRightOf="@+id/value3"
        android:layout_marginTop="325dp"/>



</RelativeLayout>